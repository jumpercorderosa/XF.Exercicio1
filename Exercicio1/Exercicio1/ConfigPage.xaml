<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exercicio1.ConfigPage">
    <ContentPage.Content>
        <TableView>
            <TableView.Root>
                <TableSection Title="Privacidade">
                    <SwitchCell Text="Aceita receber email?" x:Name="scEmail" OnChanged="scEmail_Switched" Text="{Binding FlagEmail}"/>
                    <Entry Placeholder="Informe seu email" x:Name="txtEmail" Completed="txtEmail_Completed" Text="{Binding Email}}"/>
                </TableSection>
            </TableView.Root>
        </TableView>
    </ContentPage.Content>
</ContentPage>